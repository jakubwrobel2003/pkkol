fun.h
#pragma once
#include <iostream>
using namespace std;
struct A {
	int* tab = nullptr;
};
int* gentab(int rozmiar);

void zwolnij(int* a);
void zapis(A a);
void odczyt(A* a);
bool porownaj( A& a,  A& b);



fun.cpp

#include "fun.h"
int* gentab(int rozmiar) {
	int* tab = new int[rozmiar + 1] {0};
	tab[0] = rozmiar;
	cout << "XD" << tab[0] << "XD";
	tab++;
	cout << "XD" << tab[0] << "XD";
	return tab;
};

	void zwolnij(int* a) {
		// Implementacja funkcji zwalniającej pamięć przydzieloną dla tablicy
		if (a) {
			a--; // Cofnięcie wskaźnika do pierwotnej lokalizacji
			delete[] a;
			a = nullptr;
		}
	
}
	void zapis(A a) {
		FILE* plik = NULL;
	
		errno_t error = fopen_s(&plik, "../plik1.txt", "w");
		
		int size = a.tab[-1];
		a.tab--;
		//cout << a.tab[0];
		fwrite(a.tab, sizeof(int), size, plik);
		//cout << tab[0] << endl;

		fclose(plik);

	
	};
	void odczyt(A* a) {
		
		FILE* plik = NULL;
		errno_t error = fopen_s(&plik, "../plik1.txt", "r");
		
		int size;
		fread(&size, sizeof(int), 1, plik);
		int* tab1 = new int[size + 1];
		tab1[0] = size; tab1 += 1;
		fread(tab1 , sizeof(int), size, plik);
		a->tab = tab1 ; // Ustawienie wskaźnika na właściwą pozycję
		fclose(plik);
		tab1 = nullptr;
	};
	bool porownaj(A& a, A& b) {
		int sizea = a.tab[-1];
		int sizeb = b.tab[-1];

		if (sizea != sizeb) {
			return false;
		}
		for (int i = 0; i < sizea; i++) {
			if (a.tab[i] != b.tab[i]) {
				return false;
			}
			return true;
		}
	};
main.cpp
	int main() 
		{
		A a;
		a.tab = gentab(10);
		zapis(a);
		A b;
		odczyt(&b);
		

		cout << b.tab[-1];
		cout << b.tab[-1];
		cout << "XD";
		if (porownaj(a, b)) {
			cout << "Tablice są identyczne." << endl;
		}
		else {
			cout << "Tablice nie są identyczne." << endl;
		}
		// Zwolnienie pamięci tablicy b
		zwolnij(b.tab);
		zwolnij(a.tab);
		} 
